{
  "name": "skylight",
  "private": false,
  "version": "3.0.0",
  "description": "A React Native Web UI component library",
  "type": "module",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:lib": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "prepublishOnly": "npm run build:lib",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write",
    "generate-themes": "NODE_ENV=node npx @tamagui/cli generate-themes ./sandbox/playground.ts ./skylight/generated-themes.ts"
  },
  "keywords": [
    "react",
    "react-native",
    "react-native-web",
    "ui",
    "components",
    "library"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "react-native-web": ">=0.19.0"
  },
  "dependencies": {
    "@tamagui/config": "^1.132.23",
    "@tamagui/lucide-icons": "^1.132.23",
    "@tamagui/vite-plugin": "^1.132.23",
    "react-native-svg": "^15.12.1",
    "react-native-vector-icons": "^10.3.0",
    "tamagui": "^1.132.23"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@storybook/addon-docs": "^9.1.4",
    "@storybook/react-vite": "^9.1.4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-native-web": "^0.19.2",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.4",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-native-web": "^0.21.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "storybook": "^9.1.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
